<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<context:component-scan
		base-package="org.certificatic.spring.aop.practica22,org.certificatic.spring.aop.util.bean" />

	<!-- TODO 6. Define configuraciÃ³n spring aop -->
	<aop:config>

		<aop:aspect id="audienciaAspecto" ref="audienciaBean">

			<!-- definicion de pointcuts -->

			<aop:pointcut id="cuandoUnJugadorEjecutaUnPase"
				expression="execution( * org.certificatic..api.IJugador.ejecutarPase() )" />

			<aop:pointcut id="cuandoUnJugadorCobraUnPenal"
				expression="execution( * org.certificatic..api.IJugador.cobrarPenal(..) )" />

			<aop:pointcut id="cuandoUnJugadorCometeUnaFalta"
				expression="execution( * org.certificatic..api.IJugador.cometerFalta(..) )" />

			<aop:pointcut id="cuandoUnJugadorTiraAGol"
				expression="execution( * org.certificatic..api.IJugador.tirarAGol(*) )" />

			<aop:pointcut id="cuandoUnJugadorEsExpulsado"
				expression="execution( * org.certificatic..api.IJugador.esExpulsado() )" />

			<!-- advices cuando un jugador ejecuta un pase -->

			<aop:before pointcut-ref="cuandoUnJugadorEjecutaUnPase"
				method="gritaOle" />

			<aop:after pointcut-ref="cuandoUnJugadorEjecutaUnPase"
				method="gritaOle" />

			<!-- advices cuando un jugador cobra un penal -->

			<aop:before pointcut-ref="cuandoUnJugadorCobraUnPenal"
				method="sePoneDePie" />

			<aop:after-returning pointcut-ref="cuandoUnJugadorCobraUnPenal"
				method="gritaGol" />

			<aop:after-throwing pointcut-ref="cuandoUnJugadorCobraUnPenal"
				method="abuchear" />

			<aop:after-throwing pointcut-ref="cuandoUnJugadorCobraUnPenal"
				method="abuchear" />

			<aop:after pointcut-ref="cuandoUnJugadorCobraUnPenal"
				method="seSienta" />

			<!-- advices cuando un jugador comete una falta -->

			<aop:after pointcut-ref="cuandoUnJugadorCometeUnaFalta"
				method="abuchear" />

			<!-- advices cuando un jugador tira a gol -->

			<aop:after-returning pointcut-ref="cuandoUnJugadorTiraAGol"
				method="gritaGol" />

			<aop:after-returning pointcut-ref="cuandoUnJugadorTiraAGol"
				method="gritaGol" />

			<aop:after-returning pointcut-ref="cuandoUnJugadorTiraAGol"
				method="aplaudir" />

			<aop:after-returning pointcut-ref="cuandoUnJugadorTiraAGol"
				method="aplaudir" />

			<!-- advices cuando un jugador es expulsado -->
			<!-- 
			<aop:after pointcut-ref="cuandoUnJugadorEsExpulsado"
				method="abuchear" />

			<aop:after pointcut-ref="cuandoUnJugadorEsExpulsado"
				method="abuchear" />

			<aop:after pointcut-ref="cuandoUnJugadorEsExpulsado"
				method="aplaudir" />

			<aop:after pointcut-ref="cuandoUnJugadorEsExpulsado"
				method="aplaudir" />
			-->
			<aop:around pointcut-ref="cuandoUnJugadorEsExpulsado" 
				method="sePoneDeNervios" />


		</aop:aspect>

	</aop:config>

</beans>
